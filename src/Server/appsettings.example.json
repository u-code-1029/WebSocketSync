{
    "Serilog": {
        "Using": [ "Serilog.Sinks.Console", "Serilog.Sinks.File" ],
        "MinimumLevel": {
            "Default": "Information",
            "Override": {
                "Microsoft": "Warning",
                "System": "Warning"
            }
        },
        "WriteTo": [
            { "Name": "Console" },
            {
                "Name": "File",
                "Args": {
                    "path": "logs/server-.log",
                    "rollingInterval": "Day"
                }
            }
        ]
    },
    "Kestrel": {
        "Endpoints": {
            "Http": { "Url": "http://0.0.0.0:2665" }
        }
    },
    "AllowedHosts": "*"
}
