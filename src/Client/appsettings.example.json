{
    "Serilog": {
        "MinimumLevel": { "Default": "Information" },
        "WriteTo": [
            { "Name": "Console" },
            {
                "Name": "File",
                "Args": {
                    "path": "logs/client-.log",
                    "rollingInterval": "Day"
                }
            }
        ]
    },
    "Client": {
        "ClientId": "client-001",
        "ServerUrl": "http://localhost:2665/hub",
        "ResultCallback": "http://localhost:2665/api/clients/service-result",
        "SyncDirectory": "C:\\SyncRoot\\client-001",
        "Controller": false,
        "MouseMoveHz": 30,
        "FollowControllerMouse": true,
        "ClientsRefreshSeconds": 5
    }
}
