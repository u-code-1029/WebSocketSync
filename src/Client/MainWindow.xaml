<Window
    x:Class="Client.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
    Title="Client"
    Width="900"
    Height="520"
    MouseWheel="Window_MouseWheel"
    PreviewMouseDown="Window_PreviewMouseDown"
    PreviewMouseMove="Window_PreviewMouseMove"
    PreviewMouseUp="Window_PreviewMouseUp">
    <Window.Resources>
        <BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter" />
    </Window.Resources>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <ui:Card
            Grid.Row="0"
            Margin="12"
            Padding="12">
            <StackPanel Orientation="Vertical">
                <!-- Settings overview -->
                <StackPanel Margin="0,0,0,8" Orientation="Horizontal">
                    <ui:TextBlock Margin="0,0,8,0" Text="Client Id:" />
                    <ui:TextBox Width="240" Text="{Binding ClientId}" IsReadOnly="True" />
                    <ui:TextBlock Margin="12,0,8,0" Text="Mouse Hz:" />
                    <ui:TextBox Width="80" Text="{Binding MouseMoveHz}" />
                </StackPanel>
                <StackPanel Margin="0,0,0,8" Orientation="Horizontal">
                    <ui:TextBlock Margin="0,0,8,0" Text="Server URL:" />
                    <ui:TextBox Width="420" Text="{Binding ServerUrl}" IsReadOnly="True" />
                </StackPanel>
                <StackPanel Margin="0,0,0,8" Orientation="Horizontal">
                    <ui:TextBlock Margin="0,0,8,0" Text="Result Callback:" />
                    <ui:TextBox Width="420" Text="{Binding ResultCallback}" IsReadOnly="True" />
                </StackPanel>
                <StackPanel
                    Margin="0,0,0,8"
                    VerticalAlignment="Center"
                    Orientation="Horizontal">
                    <ui:TextBlock Margin="0,0,8,0" Text="Status:" />
                    <ui:TextBlock Text="{Binding ConnectionStatus}" />
                    <ui:Button
                        Margin="12,0,0,0"
                        Appearance="Primary"
                        Command="{Binding RequestControlCommand}"
                        Content="{Binding ControlButtonText}"
                        Icon="HandRight28" />

                </StackPanel>
                <ui:InfoBar
                    Title="Control Status"
                    Margin="0,0,0,8"
                    IsOpen="True"
                    Message="{Binding ControllerStatusText}">
                    <ui:InfoBar.Style>
                        <Style TargetType="ui:InfoBar">
                            <Setter Property="Severity" Value="Informational" />
                            <Style.Triggers>
                                <DataTrigger Binding="{Binding IsController}" Value="True">
                                    <Setter Property="Severity" Value="Success" />
                                </DataTrigger>
                                <DataTrigger Binding="{Binding HasController}" Value="True">
                                    <Setter Property="Severity" Value="Warning" />
                                </DataTrigger>
                            </Style.Triggers>
                        </Style>
                    </ui:InfoBar.Style>
                </ui:InfoBar>
                <StackPanel Orientation="Horizontal" Margin="0,0,0,8">
                    <CheckBox IsChecked="{Binding FollowControllerMouse}" Content="Follow Controller Mouse" />
                </StackPanel>
                <!-- Connected clients selection -->
                <StackPanel Margin="0,0,0,8">
                    <ui:TextBlock Text="Connected Clients" FontWeight="Bold" />
                    <StackPanel Orientation="Horizontal" Margin="0,4,0,4">
                        <ui:Button Margin="0,0,8,0" Command="{Binding RefreshClientsCommand}" Content="Refresh" Icon="ArrowClockwise28" />
                        <ui:Button Margin="0,0,8,0" Command="{Binding SelectAllClientsCommand}" Content="Select All" Icon="Checkmark24" />
                        <ui:Button Margin="0,0,8,0" Command="{Binding SelectNoneClientsCommand}" Content="Select None" Icon="Dismiss24" />
                    </StackPanel>
                    <ItemsControl ItemsSource="{Binding ConnectedClients}">
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <CheckBox Content="{Binding Id}" IsChecked="{Binding IsSelected, Mode=TwoWay}" />
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </StackPanel>
                <ui:InfoBar
                    Title="Sync Status"
                    Margin="0,0,0,8"
                    IsOpen="True"
                    Message="{Binding SyncStatusText}">
                    <ui:InfoBar.Style>
                        <Style TargetType="ui:InfoBar">
                            <Setter Property="Severity" Value="Informational" />
                            <Style.Triggers>
                                <DataTrigger Binding="{Binding SyncEnabled}" Value="True">
                                    <Setter Property="Severity" Value="Success" />
                                </DataTrigger>
                            </Style.Triggers>
                        </Style>
                    </ui:InfoBar.Style>
                </ui:InfoBar>
                <StackPanel Margin="0,0,0,8" Orientation="Horizontal">
                    <ui:TextBlock Margin="0,0,8,0" Text="Controller:" />
                    <ui:TextBlock Text="{Binding CurrentControllerId}" />
                    <ui:TextBlock
                        Margin="8,0,0,0"
                        Foreground="Green"
                        Text="(You)"
                        Visibility="{Binding IsController, Converter={StaticResource BooleanToVisibilityConverter}}" />
                </StackPanel>
                <StackPanel VerticalAlignment="Center" Orientation="Horizontal">
                    <ui:TextBlock
                        Margin="0,0,8,0"
                        VerticalAlignment="Center"
                        Text="Sync Dir:" />
                    <ui:TextBox Width="420" Text="{Binding SyncDirectory, UpdateSourceTrigger=PropertyChanged}" />
                    <CheckBox
                        Margin="8,0,0,0"
                        IsChecked="{Binding SyncEnabled}"
                        Content="Enable Sync" />
                    <ui:Button
                        Margin="8,0,0,0"
                        Click="Browse_Click"
                        IsEnabled="{Binding SyncEnabled}"
                        Content="Browse"
                        Icon="Folder28" />
                    <ui:Button
                        Margin="8,0,0,0"
                        Command="{Binding SaveSyncDirectoryCommand}"
                        IsEnabled="{Binding SyncEnabled}"
                        Content="Save"
                        Icon="SaveEdit24" />
                    <ui:Button
                        Margin="8,0,0,0"
                        Command="{Binding OpenSyncDirectoryCommand}"
                        Content="Open"
                        Icon="FolderOpen24" />
                    <ui:Button
                        Margin="8,0,0,0"
                        Command="{Binding PushInitialSyncCommand}"
                        IsEnabled="{Binding SyncEnabled}"
                        Content="Push Initial Sync"
                        Icon="ArrowUpload24" />
                    <CheckBox
                        Margin="16,0,0,0"
                        IsChecked="{Binding OverwriteExistingOnly}"
                        Content="Overwrite for ones that already exists" />
                </StackPanel>
                <!-- Run command to selected clients -->
                <StackPanel Margin="0,8,0,0" Orientation="Horizontal">
                    <ui:TextBlock Margin="0,0,8,0" Text="Command:" />
                    <ui:TextBox Width="280" Text="{Binding RunCommandPath, UpdateSourceTrigger=PropertyChanged}" />
                    <ui:TextBlock Margin="8,0,8,0" Text="Args:" />
                    <ui:TextBox Width="240" Text="{Binding RunCommandArgs, UpdateSourceTrigger=PropertyChanged}" />
                    <ui:Button Margin="8,0,0,0" Command="{Binding SendRunCommandCommand}" Content="Send to Selected" Icon="Send28" />
                </StackPanel>

                <!-- Run service to selected clients -->
                <StackPanel Margin="0,8,0,0" Orientation="Horizontal">
                    <ui:TextBlock Margin="0,0,8,0" Text="Service:" />
                    <ui:TextBox Width="240" Text="{Binding ServiceName, UpdateSourceTrigger=PropertyChanged}" />
                    <ui:TextBlock Margin="8,0,8,0" Text="Params (k=v; a=b):" />
                    <ui:TextBox Width="320" Text="{Binding ServiceParams, UpdateSourceTrigger=PropertyChanged}" />
                    <ui:Button Margin="8,0,0,0" Command="{Binding SendServiceRunCommand}" Content="Send Service to Selected" Icon="Rocket24" />
                </StackPanel>
            </StackPanel>
        </ui:Card>
        <Grid Grid.Row="1" Margin="12">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>
            <StackPanel
                Grid.Row="0"
                HorizontalAlignment="Right"
                Orientation="Horizontal">
                <ui:Button
                    Command="{Binding ClearEventsCommand}"
                    Content="Clear"
                    Icon="Delete24" />
            </StackPanel>
            <ui:ListView
                x:Name="EventsList"
                Grid.Row="1"
                Margin="0,4,0,0"
                ItemsSource="{Binding Events}">
                <ui:ListView.ItemTemplate>
                    <DataTemplate>
                        <ui:TextBlock Text="{Binding}" />
                    </DataTemplate>
                </ui:ListView.ItemTemplate>
            </ui:ListView>
        </Grid>
    </Grid>
</Window>
