<Window
    x:Class="Client.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
    Title="Client"
    Width="900"
    Height="520"
    MouseWheel="Window_MouseWheel"
    PreviewMouseDown="Window_PreviewMouseDown"
    PreviewMouseMove="Window_PreviewMouseMove"
    PreviewMouseUp="Window_PreviewMouseUp">
    <Window.Resources>
        <BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter" />
    </Window.Resources>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <ui:Card
            Grid.Row="0"
            Margin="12"
            Padding="12">
            <StackPanel Orientation="Vertical">
                <StackPanel
                    Margin="0,0,0,8"
                    VerticalAlignment="Center"
                    Orientation="Horizontal">
                    <ui:TextBlock Margin="0,0,8,0" Text="Status:" />
                    <ui:TextBlock Text="{Binding ConnectionStatus}" />
                    <ui:Button
                        Margin="12,0,0,0"
                        Appearance="Primary"
                        Command="{Binding RequestControlCommand}"
                        Content="{Binding ControlButtonText}"
                        Icon="HandRight28" />

                </StackPanel>
                <ui:InfoBar
                    Title="Control Status"
                    Margin="0,0,0,8"
                    IsOpen="True"
                    Message="{Binding ControllerStatusText}">
                    <ui:InfoBar.Style>
                        <Style TargetType="ui:InfoBar">
                            <Setter Property="Severity" Value="Informational" />
                            <Style.Triggers>
                                <DataTrigger Binding="{Binding IsController}" Value="True">
                                    <Setter Property="Severity" Value="Success" />
                                </DataTrigger>
                                <DataTrigger Binding="{Binding HasController}" Value="True">
                                    <Setter Property="Severity" Value="Warning" />
                                </DataTrigger>
                            </Style.Triggers>
                        </Style>
                    </ui:InfoBar.Style>
                </ui:InfoBar>
                <StackPanel Margin="0,0,0,8" Orientation="Horizontal">
                    <ui:TextBlock Margin="0,0,8,0" Text="Controller:" />
                    <ui:TextBlock Text="{Binding CurrentControllerId}" />
                    <ui:TextBlock
                        Margin="8,0,0,0"
                        Foreground="Green"
                        Text="(You)"
                        Visibility="{Binding IsController, Converter={StaticResource BooleanToVisibilityConverter}}" />
                </StackPanel>
                <StackPanel VerticalAlignment="Center" Orientation="Horizontal">
                    <ui:TextBlock
                        Margin="0,0,8,0"
                        VerticalAlignment="Center"
                        Text="Sync Dir:" />
                    <ui:TextBox Width="420" Text="{Binding SyncDirectory, UpdateSourceTrigger=PropertyChanged}" />
                    <ui:Button
                        Margin="8,0,0,0"
                        Click="Browse_Click"
                        Content="Browse"
                        Icon="Folder28" />
                    <ui:Button
                        Margin="8,0,0,0"
                        Command="{Binding SaveSyncDirectoryCommand}"
                        Content="Save"
                        Icon="SaveEdit24" />
                    <ui:Button
                        Margin="8,0,0,0"
                        Command="{Binding PushInitialSyncCommand}"
                        Content="Push Initial Sync"
                        Icon="ArrowUpload24" />
                </StackPanel>
            </StackPanel>
        </ui:Card>
        <Grid Grid.Row="1" Margin="12">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>
            <StackPanel
                Grid.Row="0"
                HorizontalAlignment="Right"
                Orientation="Horizontal">
                <ui:Button
                    Command="{Binding ClearEventsCommand}"
                    Content="Clear"
                    Icon="Delete24" />
            </StackPanel>
            <ui:ListView
                x:Name="EventsList"
                Grid.Row="1"
                Margin="0,4,0,0"
                ItemsSource="{Binding Events}">
                <ui:ListView.ItemTemplate>
                    <DataTemplate>
                        <ui:TextBlock Text="{Binding}" />
                    </DataTemplate>
                </ui:ListView.ItemTemplate>
            </ui:ListView>
        </Grid>
    </Grid>
</Window>
